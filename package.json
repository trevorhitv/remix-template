{
  "name": "remix-template",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bunx --bun remix vite:build",
    "dev": "bun run --bun vite",
    "format": "bun prettier . --write",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "setup-test": "DATBASE_URL=sqlite:test.sqlite && touch test.sqlite && bun run db:up",
    "test": "bun run setup-test && bun test && rm test.sqlite",
    "docker:build": "docker build -t ${npm_package_name} .",
    "docker:run": "docker run -p 3000:3000 ${npm_package_name}",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=${npm_package_name})",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun run app/db/migrate.js",
    "db:seed": "bun run app/db/seed.js",
    "db:new": "rm sqlite.db || true && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@remix-run/node": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "@remix-run/serve": "^2.10.3",
    "bun": "^1.1.21",
    "drizzle-orm": "^0.32.1",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.12.3",
    "@remix-run/dev": "^2.10.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.4",
    "vite": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}