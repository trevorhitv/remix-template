{
  "name": "remix-template",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bunx --bun remix vite:build",
    "dev": "bun run --bun vite",
    "format": "bun prettier . --write",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "docker:build": "docker build -t ${npm_package_name} .",
    "docker:run": "docker run -p 3000:3000 ${npm_package_name}",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=${npm_package_name})",
    "db:create-migration": "dbmate new",
    "db:up": "dbmate up",
    "db:rollback": "dbmate rollback",
    "db:status": "dbmate status"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@remix-run/node": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "@remix-run/serve": "^2.10.3",
    "bun": "^1.1.21",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.10.3",
    "autoprefixer": "^10.4.19",
    "dbmate": "^2.19.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.4",
    "vite": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
